{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "lib": ["es6", "dom"],
      "declaration": true, 
      "declarationMap": true, 
      "sourceMap": true,
      "removeComments": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node"
  },
  "include": [
      "src/**/*", "src/main.d.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}